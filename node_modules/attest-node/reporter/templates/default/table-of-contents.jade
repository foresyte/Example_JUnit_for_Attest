
mixin tableOfContents(testResults, userAgents)
  .alert.alert-info
    h2 Accessibility Checks

    if userAgents.length > 0
      label(for="browser-filter") Show results from
      select(id="browser-filter")
        option(value="all") all
        each userAgent in userAgents
          option(value="#{userAgent}") #{userAgent}
    ul
      each testResult in testResults
        li.toc-item(data-browser="#{getBrowser(testResult)}")
          a(href="##{shortName(testResult)}")
            | #{shortName(testResult) || testResult.id}
